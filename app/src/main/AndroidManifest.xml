<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.bbqu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/raw_bbq"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Move">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PostDetailActivity" />
        <activity android:name=".activity.checkActivity" />
        <activity android:name=".activity.NewPostActivity" />
        <activity android:name=".activity.BanActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.Setting" />
        <activity android:name=".activity.EditProfile" />
        <activity android:name=".activity.WeatherActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.PassWord"/>
        <activity android:name=".activity.NewUserActivity"></activity>
        <activity android:name=".activity.IntentSendMessage"></activity>
        <activity android:name=".activity.MessageActivity"></activity>
    </application>

</manifest>
